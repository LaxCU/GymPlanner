doctype html
html
  head
    title Health Metrics
    link(rel='stylesheet', href='/styles/profile.css')
  body
    header
      h1 Health Metrics
    main
      h2 Enter Health Metrics
      form(action='/metrics', method='POST')
        label(for='weight') Weight (kg):
        input(type='number', id='weight', name='weight', min='0', step='0.1', required)
        br
        label(for='bodyFat') Body Fat (%):
        input(type='number', id='bodyFat', name='bodyFat', min='0', max='100', step='0.1', required)
        br
        label(for='muscleMass') Muscle Mass (kg):
        input(type='number', id='muscleMass', name='muscleMass', min='0', step='0.1', required)
        br
        label(for='heartRate') Resting Heart Rate (bpm):
        input(type='number', id='heartRate', name='heartRate', min='0', step='1' required)
        br
        label(for='bloodPressure') Blood Pressure (mmHg):
        input(type='text', id='bloodPressure', name='bloodPressure', pattern='[0-9]{2,3}/[0-9]{2,3}', placeholder='e.g., 120/80', required)
        br
        button(type='submit') Submit
